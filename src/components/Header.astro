---
import Hamburger from "./Hamburger.astro";
import Nav from "./Nav.astro";

const { blur } = Astro.props;

const bgblur = blur === true ? 'blur-active' : '';
---

<header id="top" class={bgblur}>
  <div class="mobile-box">
    <a href="/"><h1 class="header-name">Amity Warme</h1></a>
    <Hamburger />
  </div>
  <Nav />
</header>
<style>
  header {
    width: 100vw;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    font-family: "Unbound", Georgia, 'Times New Roman', Times, serif;
    background-color: rgba(245, 245, 245, 0.99);
    box-shadow: 0 0 3px rgb(64, 64, 64);
  }
  header.blur-active {
    background-color: rgb(245, 245, 245);
  }
  .mobile-box {
    width: 100vw;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .mobile-box a {
    text-decoration: none;
  }
  .header-name {
    margin: 1rem 1.5rem;
    text-transform: uppercase;
    font-size: 18px;
  }
  @media screen and (min-width: 770px) {
    header {
      flex-direction: row;
    }
    .mobile-box {
      width: fit-content;
    }
    .header-name {
      font-size: 1.15rem;
    }
  }
  @media screen and (min-width: 1000px) {
    .header-name {
      font-size: 1.75rem;
      margin-left: 2.75rem;
    }
  }
</style>