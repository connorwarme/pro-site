---
import Hamburger from "./Hamburger.astro";
import Nav from "./Nav.astro";
---

<header>
  <h1 class="header-name">Amity Warme</h1>
  <Hamburger />
  <Nav />
</header>
<style>
  header {
    width: 100vw;
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-family: "Unbound", Georgia, 'Times New Roman', Times, serif;
  }
  .header-name {
    text-transform: uppercase;
    font-size: 18px;
  }
  header:last-child {
    display: none;
  }
</style>