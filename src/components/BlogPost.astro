---
const { title, description, url, type } = Astro.props;
---

<li class="bloglist-item" id={type}>
  <div>
    <p class="type">{type}</p>
  </div>
  <a class="blog-card" href={url}>
    <h2>{title}</h2>
    <p>{description}</p>
  </a>
</li>
<style>
  li {
    list-style: none;
    margin-bottom: 10px;
    display: grid;
    align-items: center;
    grid-template-columns: 40px 1fr;
    border: 2px solid transparent;
    border-radius: 5px;
    background-color: rgba(245, 245, 245, 1);
  }
  div {
    place-self: start;
    height: 100%;
    max-width: 40px;
    min-height: 100px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  #blog {
    border-color: rgba(254, 7, 62, 0.75);
  }
  #video {
    border-color: rgba(14, 173, 105, 0.75);
  }
  #recipe {
    border-color: rgb(252, 202, 70);
  }
  #podcast {
    border-color: rgba(61, 165, 217, 0.6);
  }
  #news {
    border-color: rgba(154, 70, 247, 0.6);
  }
  .type {
    margin: 5px 0;
    transform: rotate(-90deg);
    font-family: "Unbound";
    color: rgb(64, 64, 64);
  }
  #blog > div {
    background-color: rgba(254, 7, 62, 0.75);
  }
  #video > div {
    background-color: rgba(14, 173, 105, 0.75);
  }
  #recipe > div {
    background-color: rgb(252, 202, 70);
  }
  #podcast > div {
    background-color: rgba(61, 165, 217, 0.6);
  }
  #news > div {
    background-color: rgba(154, 70, 247, 0.6);
  }
  a.blog-card {
    text-decoration: none;
    color: rgb(64, 64, 64);
    margin: 0 16px;
  }
  a > h4 {
    margin: 16px 0;
    font-weight: 600;
  }
  a:hover h4 {
    text-decoration: underline;
  }
  @media screen and (min-width: 770px) {
    li {
      margin: 10px 15px;
    }
  }
</style>
