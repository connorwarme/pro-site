---
const { title, description, url, date, type, img } = Astro.props;
// not sure about including the image..
const prositeURL = `/${url}`;
---

<li class="bloglist-item" id={type}>
  <div>
    <p class="type">{type}</p>
  </div>
  <a class="blog-card" href={url}>
  <!-- <a href={prositeURL}> -->
    <h4>{title}</h4>
    <p>{description}</p>
  </a>
</li>
<style>
  li {
    list-style: none;
    margin-bottom: 10px;
    display: grid;
    align-items: center;
    grid-template-columns: 40px 1fr;
    border: 2px solid transparent;
    border-radius: 5px;
  }
  div {
    place-self: start;
    height: 100%;
    max-width: 40px;
    min-height: 100px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  #blog {
    border-color: rgb(254, 7, 62);
  }
  #media {
    border-color: rgb(14, 173, 105);
  }
  #recipe {
    border-color: rgb(252, 202, 70);
  }
  #podcast {
    border-color: rgb(61, 165, 217);
  }
  .type {
    margin: 5px 0;
    transform: rotate(-90deg);
    font-family: "Unbound";
    color: rgb(64, 64, 64);
  }
  #blog > div {
    background-color: rgb(254, 7, 62);
  }
  #media > div {
    background-color: rgb(14, 173, 105);
  }
  #recipe > div {
    background-color: rgb(252, 202, 70);
  }
  #podcast > div {
    background-color: rgb(61, 165, 217);
  }
  a.blog-card {
    text-decoration: none;
    color: rgb(64, 64, 64);
    margin: 0 16px;
  }
  a > h4 {
    margin: 16px 0;
    font-weight: 600;
  }
  a:hover h4 {
    text-decoration: underline;
  }
  @media screen and (min-width: 770px) { 
    li {
      margin: 10px 15px;
    }
  }
</style>