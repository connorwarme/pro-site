---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
  <div class="blog-wrapper">
    <h1 class="blog-title">{frontmatter.title}</h1>
    <p class="blog-intro">{frontmatter.pubDate.slice(5,10)}-{frontmatter.pubDate.slice(0,4)}</p>
    <p class="blog-intro"><em>{frontmatter.description}</em></p>
    { frontmatter.author ? <p class="blog-intro">Written by: {frontmatter.author}</p> : null }
    <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />
    { frontmatter.image.cred ? <figcaption>Credit: {frontmatter.image.cred}</figcaption> : null }
    <slot />
    <div class="tag-index-container">
      <!-- <div>tagged with:</div> -->
      {frontmatter.tags.map((tag) => (
        <a class="tag-item" href={`/tags/${tag}`}>{tag}</a>
      ))}
    </div>
  </div>
</BaseLayout>
<style>
  .blog-wrapper {
    margin-top: 50vh;
    background-color: whitesmoke;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 0 1.5rem;
  }
  .blog-intro {
    text-align: center;
  }
  .tag-index-container {
    display: flex;
    flex-wrap: wrap;
    margin: 0 auto;
    justify-content: center;
    align-items: center;
  }
