---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import lifeline from "../images/gallery/lifeline.jpg";
import '../styles/global.css';

const { pageTitle, img } = Astro.props;
const background = img ? `url(${img.url})` : `url(${lifeline})`;
const position = img ? `${img.position}` : 'center';

---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/pro-site/a-custom.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
    <Header />
    <slot />
    <Footer />
    <script>
      import "../scripts/menu.js";

    </script>
    <style define:vars={{background, position}}>
      body {
        background-image: var(--background);
        background-position: var(--position);
        background-repeat: no-repeat;
        background-attachment: fixed;
        min-height: 100vh;
        background-size: cover;
      }
    </style>
	</body>
</html>
