---
import BaseLayout from "../layouts/BaseLayout.astro";

const fakeimg = {
  url: false,
  blur: true,
}
---

<BaseLayout pageTitle="Contact Me" img={fakeimg}>
  <div class="contact-wrapper">
    <div class="contact-content">
      <h1>Reach Out</h1>
      <p>I'd love to hear from you!</p>
      <form action="https://formsubmit.co/d3a941f5652a2e6a2dce66170423a79f" method="POST" >
        <label for="first-name">
          <span>First Name:</span>
          <input type="text" id="first-name" name="first_name" placeholder="First Name*" maxlength="256" required />
          <span class="error" aria-live="polite"></span>
        </label>
        <label for="family-name">
          <span>Family Name:</span>
          <input type="text" id="family-name" name="family_name" placeholder="Family Name" maxlength="256" />
          <span class="error" aria-live="polite"></span>
        </label>
        <label for="email">
          <span>Your Email:</span>
          <input type="email" id="email" name="email" placeholder="Email*" maxlength="256" required />
          <span class="error" aria-live="polite"></span>
        </label>
        <label for="message">
          <span>Your Message:</span>
          <textarea id="message" name="message" placeholder="Message" maxlength="5000" required />
          <span class="error" aria-live="polite"></span>
        </label>
        <button type="submit" id="submit-btn">Submit</button>
      </form>
    </div>
  </div>

</BaseLayout>

<style>
  .contact-wrapper {
    display: flex;
    flex-direction: column;
    margin: 0;
  }
  .contact-content {
    background-color: rgb(245, 245, 245);
    color: rgb(64,64,64);
    width: 100vw;
    /* max-width: 575px; */
    padding: 0 2rem;
    border-radius: 3px;
    display: grid;
    grid-template-columns: auto;
    /* flex-direction: column; */
    justify-content: center;
    align-items: center;
  }
  h1 {
    font-family: "Unbound";
    font-size: 2rem;
    text-align: center;
    margin-bottom: 0;
  }
  p {
    text-align: center;
  }
  form {
    display: grid;
    grid-template-columns: auto;
    max-width: 575px;
    width: calc(100vw - 4rem);
  }
  label {
    display: grid;
    width: inherit;
  }
  label > span:first-child {
    display: none;
  }
  input, textarea {
    min-height: 50px;
    width: 100%;
    font-family: "Playfair", Georgia, 'Times New Roman', Times, serif;
    font-size: 1rem;
    letter-spacing: -0.3px;
    border: 2px solid rgb(211, 211, 211);
    border-radius: 3px;
    padding: 0.5rem;
    margin: 0.5rem 0;
  }
  textarea {
    min-height: 100px;
  }
  button {
    height: 60px;
    width: 100px;
    margin: 0.5rem;
    justify-self: center;
    border: 2px solid rgb(254, 7, 62);
    border-radius: 5px;
    background-color: rgb(245, 245, 245);
    font-family: "Playfair";
    font-size: 1.15rem;
    color: rgb(64,64,64);
  }
  button:hover {
    cursor: pointer;
  }
  @media screen and (min-width: 480px) {

  }
</style>