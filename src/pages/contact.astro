<BaseLayout pageTitle="Contact Me" img={fakeimg}>
  <div class="contact-wrapper">
    <div class="contact-content">
      <img src={logo} alt='Amity logo' />
      <h1>Reach Out</h1>
      <p>I'd love to hear from you!</p>
      <Contact client:load />
    </div>
  </div>
</BaseLayout>
<style>
  .contact-wrapper {
    display: flex;
    flex-direction: column;
    margin: 0;
  }
  .contact-content {
    background-color: rgb(245, 245, 245);
    color: rgb(64,64,64);
    width: 100vw;
    padding: 1rem 2rem;
    border-radius: 3px;
    display: grid;
    grid-template-columns: auto;
    justify-items: center;
    align-items: center;
  }
  img {
    height: 128px;
  }
  h1 {
    font-family: "Unbound";
    font-size: 2rem;
    margin-bottom: 0;
  }

