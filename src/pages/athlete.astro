---
import Achieve from "../components/Achieve.astro";
import Sponsor from "../components/Sponsor.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const imageURL = "../src/images/gallery/Wolverine.Lite.jpg"
---

<BaseLayout pageTitle="Amity the Athlete" img={imageURL}>
  <div class="athlete-spacer">
    <p class="athlete-title-one">PRO</p>
    <p class="athlete-title-two">CLIMBER</p>
    <div class="scroll-container">
      <span>Scroll Down</span>
    </div>
  </div>
  <Achieve />
  <Sponsor />
</BaseLayout>
<style>
  .athlete-spacer {
    height: 80vh;
    width: 100vw;
    display: grid;
    grid-template-rows: repeat(4, 1fr);
  }
  p {
    font-family: "Unbound", Georgia, 'Times New Roman', Times, serif;
    font-size: 70px;
    font-weight: 500;
    color: white;
    padding: 0 0 0 5vw;
    margin: 0;
  }
  .athlete-title-one {
    grid-row: 2/3;
    align-self: end;
  }
  .athlete-title-two {
    grid-row: 3/4;
  }
  .scroll-container {
    grid-row: 4/5;
    justify-self: center;
    align-self: end;
    cursor: pointer;
    position: absolute;
    bottom: 24px;
    left: 50%;
    height: 50px;
    width: 150px;
    margin-left: -75px;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .scroll-container::before {
    content: "\21D3";
    color: rgb(255, 255, 255);
    font-size: 48px;
    background-color: rgba(0, 0, 0, 0.25);
    line-height: 54px;
    width: 54px;
    border-radius: 50%;
    display: inline-block;
    text-align: center;
  }
  .scroll-container > span {
    display: none;
    text-transform: uppercase;
    text-align: center;
    color: rgb(255, 255, 255);
  }
  .scroll-container:hover::before {
    display: none;
  }
  .scroll-container:hover span {
    display: block;
  }
</style>